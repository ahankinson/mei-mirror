  <music>
    <facsimile source="D">
      <surface>
        <graphic width="604" height="172" xlink:href="Hildegard_Codex_D.jpg"/>
      </surface>
    </facsimile>
    <facsimile source="R">
      <surface>
        <graphic width="865" height="642" xlink:href="Hildegard_Codex_R.jpg"/>
      </surface>
    </facsimile>

    <!-- There may be facsimiles which don't represent a source. -->
    <facsimile>
      <surface>
        <graphic width="605" height="173"
          xlink:href="Hildegard_Trancription.jpg"/>
      </surface>
    </facsimile>

    <body>
      <mdiv>
        <score>
          <scoredef>
            <staffgrp>
              <staffdef n="1" lines="5">

                <!-- multiple clefs are allowed when meiNeumes is set to INCLUDE. -->
                <clef line="4" shape="C"/>

                <!-- It probably would be better to restrict altsym to IDREF; i.e.,
                the ID of a symbol defined in <symboltable>. -->
                <clef line="2" shape="F"/>
                <!--  altsym="dot" -->

              </staffdef>
            </staffgrp>
          </scoredef>
          <section>
            <staff n="1">
              <layer>

                <!-- When meiNeumes is set to 'INCLUDE' <syllable> becomes the basic
                unit of the notation.  This is historically accurate since this kind
                of notation was usually thought of as "neumed text". -->
                <syllable>
                  <syl n="initial">
                    <add>
                      <rend color="red">O</rend>
                    </add>
                  </syl>

                  <!-- A uneume is an uninterrupted sign, (usually?) written with a
                single motion of the pen. -->
                  <choice>
                    <orig>
                      <uneume name="porrectus"/>
                    </orig>
                    <reg>
                      <!-- The note element is used here to record the modern notes to
                      which the neume corresponds. The octave numbers have been encoded
                      explicitly. -->
                      <note pname="e" oct="3" accid="f"/>
                      <!-- 
                    <note pname="e" oct="3">
                      <app>
                        <rdg source="R">
                          <accid value="f" ho="3 neumes back"/>
                        </rdg>
                      </app>
                    </note> -->
                      <note pname="d" oct="3"/>
                      <note pname="e" oct="3"/>
                    </reg>
                  </choice>
                </syllable>

                <!-- Unless rdg is allowed to contain syl, text variants cause the
              musical content of syllable to be repeated.  For example, -->
                <app>
                  <rdg>
                    <syllable>
                      <syl>splen</syl>
                      <!-- musical content -->
                    </syllable>
                  </rdg>
                  <rdg>
                    <syllable>
                      <syl>SPLEN</syl>
                      <!-- same musical content -->
                    </syllable>
                  </rdg>
                </app>

                <!--  -->
                <syllable>
                  <app>
                    <rdg source="R">
                      <syl>splen</syl>
                    </rdg>
                    <rdg source="D">
                      <syl>SPLEN</syl>
                    </rdg>
                  </app>
                  <choice>
                    <orig>
                      <uneume name="clivis"/>
                    </orig>
                    <reg>
                      <note pname="g" oct="3"/>
                      <note pname="e" oct="3"/>
                    </reg>
                  </choice>
                  <choice>
                    <orig>
                      <!-- Stefan says: using choice would be most useful for
                    interpretation of unheightened neumes. He prefers %m.events
                    be left inside %m.events for this purpose in the Hildegard
                    repertoire, i.e., as in the following uneume. -->
                      <uneume name="pes">
                        <note pname="d" oct="3"/>
                        <note pname="e" oct="3"/>
                      </uneume>
                    </orig>
                    <reg>
                      <note pname="d" oct="3"/>
                      <note pname="e" oct="3"/>
                    </reg>
                  </choice>
                </syllable>

                <syllable>
                  <syl>di_</syl>

                  <!-- An ineume is an interrupted neume, i.e., one that is made up
                of several other neume symbols. -->
                  <choice>
                    <orig>
                      <ineume name="climacus">
                        <uneume name="virga"/>
                        <uneume name="punctum"/>
                        <uneume name="punctum"/>
                      </ineume>
                    </orig>
                    <reg>
                      <note pname="f" oct="3"/>
                      <note pname="d" oct="3"/>
                      <note pname="c" oct="3"/>
                    </reg>
                  </choice>
                </syllable>
                <syllable>
                  <syl>dis_</syl>
                  <choice>
                    <orig>
                      <uneume name="virga"/>
                    </orig>
                    <reg>
                      <note pname="e" oct="3"/>
                    </reg>
                  </choice>
                </syllable>
                <syllable>
                  <syl>si_</syl>
                  <choice>
                    <orig>
                      <ineume name="scandicus">
                        <uneume name="punctum"/>
                        <uneume name="punctum"/>
                        <uneume name="virga"/>
                      </ineume>
                    </orig>
                    <reg>
                      <note pname="a" oct="2"/>
                      <note pname="b" oct="2"/>
                      <note pname="c" oct="3"/>
                    </reg>
                  </choice>
                </syllable>
                <syllable>
                  <syl>ma</syl>
                  <choice>
                    <orig>
                      <uneume name="clivis"/>
                    </orig>
                    <reg>
                      <note pname="b" oct="2"/>
                      <note pname="a" oct="2"/>
                    </reg>
                  </choice>
                </syllable>
                <syllable>
                  <syl>gem_</syl>
                  <choice>
                    <orig>
                      <ineume>
                        <uneume name="clivis"/>
                        <uneume name="pes" form="liquescent1"/>
                      </ineume>
                    </orig>
                    <reg>
                      <note pname="e" oct="3"/>
                      <note pname="d" oct="3"/>
                      <note pname="d" oct="3"/>
                      <note pname="e" oct="3"/>
                    </reg>
                  </choice>
                </syllable>
                <syllable>
                  <syl>ma</syl>
                  <choice>
                    <orig>
                      <uneume name="virga"/>
                    </orig>
                    <reg>
                      <note pname="e" oct="3"/>
                    </reg>
                  </choice>
                </syllable>
                <syllable>
                  <syl>
                    <!-- Textual abbreviation -->
                    <abbr expan="et">&amp;</abbr>

                    <!-- Alternatively, the so-called Janus elements may
                      be wrapped within the subst element. -->
                    <choice>
                      <abbr>&amp;</abbr>
                      <expan>et</expan>
                    </choice>
                  </syl>
                  <choice>
                    <orig>
                      <uneume name="virga"/>
                    </orig>
                    <reg>
                      <note pname="d" oct="3"/>
                    </reg>
                  </choice>
                </syllable>
                <syllable>
                  <syl>se_</syl>
                  <ineume xml:id="an1">
                    <choice>
                      <orig>
                        <uneume name="punctum" form="rectangular"/>
                      </orig>
                      <reg>
                        <note pname="e" oct="3"/>
                      </reg>
                    </choice>
                    <choice>
                      <orig>
                        <uneume name="pes" form="quilismatic"/>
                      </orig>
                      <reg>
                        <note pname="f" oct="3"/>
                        <note pname="g" oct="3"/>
                      </reg>
                    </choice>
                    <choice>
                      <orig>
                        <uneume name="punctum" form="quilismatic"/>
                      </orig>
                      <reg>
                        <note pname="f" oct="3"/>
                      </reg>
                    </choice>
                    <choice>
                      <orig>
                        <uneume name="punctum"/>
                      </orig>
                      <reg>
                        <note pname="e" oct="3"/>
                      </reg>
                    </choice>
                    <choice>
                      <orig>
                        <uneume name="punctum"/>
                      </orig>
                      <reg>
                        <note pname="d" oct="3"/>
                      </reg>
                    </choice>
                  </ineume>
                  <choice>
                    <orig>
                      <uneume name="pes"/>
                    </orig>
                    <reg>
                      <note pname="d" oct="3"/>
                      <note pname="a" oct="3"/>
                    </reg>
                  </choice>
                  <ineume>
                    <choice>
                      <orig>
                        <uneume name="virga"/>
                      </orig>
                      <reg>
                        <note pname="a" oct="3"/>
                      </reg>
                    </choice>
                    <choice>
                      <orig>
                        <uneume name="punctum"/>
                      </orig>
                      <reg>
                        <note pname="g" oct="3"/>
                      </reg>
                    </choice>
                    <choice>
                      <orig>
                        <uneume name="punctum"/>
                      </orig>
                      <reg>
                        <note pname="f" oct="3"/>
                      </reg>
                    </choice>
                    <choice>
                      <orig>
                        <uneume name="punctum"/>
                      </orig>
                      <reg>
                        <note pname="e" oct="3"/>
                      </reg>
                    </choice>
                    <choice>
                      <orig>
                        <uneume name="punctum"/>
                      </orig>
                      <reg>
                        <note pname="d" oct="3"/>
                      </reg>
                    </choice>
                    <choice>
                      <orig>
                        <uneume name="virga"/>
                      </orig>
                      <reg>
                        <note pname="e" oct="3"/>
                      </reg>
                    </choice>
                  </ineume>
                </syllable>
                <syllable>
                  <syl>re_</syl>
                  <ineume xml:id="an2">
                    <uneume name="punctum">
                      <note pname="d" oct="3"/>
                    </uneume>
                    <uneume name="punctum">
                      <note pname="e" oct="3"/>
                    </uneume>
                    <uneume name="pes" form="quilismatic">
                      <note pname="f" oct="3"/>
                      <note pname="g" oct="3"/>
                    </uneume>
                    <uneume name="punctum">
                      <note pname="f" oct="3"/>
                    </uneume>
                    <uneume name="punctum">
                      <note pname="e" oct="3"/>
                    </uneume>
                    <uneume name="punctum">
                      <note pname="d" oct="3"/>
                    </uneume>
                  </ineume>
                  <uneume name="pes">
                    <note pname="d" oct="3"/>
                    <note pname="a" oct="3"/>
                  </uneume>
                  <ineume name="climacus">
                    <uneume name="virga">
                      <note pname="a" oct="3"/>
                    </uneume>
                    <uneume name="punctum">
                      <note pname="g" oct="3"/>
                    </uneume>
                    <uneume name="punctum">
                      <note pname="f" oct="3"/>
                    </uneume>
                    <uneume name="punctum">
                      <note pname="e" oct="3"/>
                    </uneume>
                  </ineume>
                </syllable>
                <syllable>
                  <syl>num</syl>
                  <uneume name="pes">
                    <note pname="d" oct="3"/>
                    <note pname="e" oct="3"/>
                  </uneume>
                </syllable>
                <syllable>
                  <syl>de_</syl>
                  <ineume name="pessubpunctis">
                    <uneume name="pes">
                      <note pname="e" oct="3"/>
                      <note pname="f" oct="3"/>
                    </uneume>
                    <uneume name="punctum">
                      <note pname="e" oct="3"/>
                    </uneume>
                    <uneume name="punctum">
                      <note pname="d" oct="3"/>
                    </uneume>
                  </ineume>
                  <ineume name="climacus">
                    <uneume name="virga">
                      <note pname="g" oct="3"/>
                    </uneume>
                    <uneume name="punctum">
                      <note pname="f" oct="3"/>
                    </uneume>
                    <uneume name="punctum">
                      <note pname="e" oct="3"/>
                    </uneume>
                  </ineume>
                </syllable>
                <syllable>
                  <syl>cus</syl>
                  <uneume name="pes">
                    <note pname="d" oct="3"/>
                    <note pname="e" oct="3"/>
                  </uneume>
                </syllable>
                <syllable>
                  <syl>so_</syl>
                  <app xml:id="app1">
                    <rdg source="D">
                      <uneume name="punctum">
                        <note pname="g" oct="3"/>
                      </uneume>
                    </rdg>
                    <rdg source="R">
                      <uneume xml:id="n2" name="punctum">
                        <note pname="g" oct="3"/>
                      </uneume>
                      <uneume name="punctum">
                        <note pname="g" oct="3"/>
                      </uneume>
                    </rdg>
                  </app>

                  <uneume name="punctum">
                    <note pname="a" oct="3"/>
                  </uneume>
                  <uneume name="virga">
                    <note pname="c" oct="4"/>
                  </uneume>
                  <uneume name="punctum">
                    <note pname="b" oct="3"/>
                  </uneume>
                  <uneume name="punctum">
                    <note pname="a" oct="3"/>
                  </uneume>

                  <app>
                    <rdg>
                      <ineume name="climacus">
                        <uneume name="punctum">
                          <note pname="a" oct="3"/>
                        </uneume>
                        <uneume name="punctum">
                          <note pname="g" oct="3"/>
                        </uneume>
                        <uneume name="punctum">
                          <note pname="f" oct="3"/>
                        </uneume>
                        <uneume name="punctum">
                          <note pname="e" oct="3"/>
                        </uneume>
                      </ineume>
                      <uneume name="punctum">
                        <note pname="d" oct="3"/>
                      </uneume>
                      <uneume name="punctum">
                        <note pname="e" oct="3"/>
                      </uneume>
                      <uneume name="pes" form="quilismatic">
                        <note pname="f" oct="3"/>
                        <note pname="g" oct="3"/>
                      </uneume>
                    </rdg>
                    <rdg>
                      <ineume name="climacus">
                        <uneume name="punctum">
                          <note pname="a" oct="3"/>
                        </uneume>
                        <uneume name="punctum">
                          <note pname="g" oct="3"/>
                        </uneume>
                        <uneume name="punctum">
                          <note pname="f" oct="3"/>
                        </uneume>
                        <uneume name="punctum">
                          <note pname="e" oct="3"/>
                        </uneume>
                        <uneume name="punctum">
                          <note pname="d" oct="3"/>
                        </uneume>
                      </ineume>
                      <uneume name="punctum">
                        <note pname="e" oct="3"/>
                      </uneume>
                      <uneume name="pes" form="quilismatic">
                        <note pname="f" oct="3"/>
                        <note pname="g" oct="3"/>
                      </uneume>
                    </rdg>
                  </app>
                </syllable>
                <sb/>

                <!-- A textual annotation which comments on the apparatus rather
              than on an event or set of events. -->
                <annot plist="app1">
                  <p>Source R has an additional punctum here not found in source
                    D.</p>
                </annot>

              </layer>
            </staff>
          </section>
        </score>
      </mdiv>
    </body>
  </music>
