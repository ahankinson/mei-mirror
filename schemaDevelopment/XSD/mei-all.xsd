<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
  elementFormDefault="qualified"
  targetNamespace="http://www.music-encoding.org/ns/mei"
  xmlns:mei="http://www.music-encoding.org/ns/mei"
  xmlns:xlink="http://www.w3.org/1999/xlink">
  <xs:include schemaLocation="datatypes.xsd"/>
  <xs:include schemaLocation="coConstraints.xsd"/>
  <xs:include schemaLocation="shared_Module.xsd"/>
  <xs:include schemaLocation="header_Module.xsd"/>
  <xs:include schemaLocation="cmn_Module.xsd"/>
  <xs:include schemaLocation="mensural_Module.xsd"/>
  <xs:include schemaLocation="neumes_Module.xsd"/>
  <xs:include schemaLocation="cmnOrnaments_Module.xsd"/>
  <xs:include schemaLocation="corpus_Module.xsd"/>
  <xs:include schemaLocation="critapp_Module.xsd"/>
  <xs:include schemaLocation="edittrans_Module.xsd"/>
  <xs:include schemaLocation="facsimile_Module.xsd"/>
  <xs:include schemaLocation="figtable_Module.xsd"/>
  <xs:include schemaLocation="harmony_Module.xsd"/>
  <xs:include schemaLocation="linkalign_Module.xsd"/>
  <xs:include schemaLocation="lyrics_Module.xsd"/>
  <xs:include schemaLocation="midi_Module.xsd"/>
  <xs:include schemaLocation="namesdates_Module.xsd"/>
  <xs:include schemaLocation="ptrref_Module.xsd"/>
  <xs:include schemaLocation="tablature_Module.xsd"/>
  <xs:include schemaLocation="text_Module.xsd"/>
  <xs:include schemaLocation="usersymbols_Module.xsd"/>
  <xs:import schemaLocation="analysis_Module.xsd"/>
  <xs:import namespace="http://www.w3.org/1999/xlink" schemaLocation="xlink.xsd"/>
  <xs:import namespace="http://www.w3.org/XML/1998/namespace"
    schemaLocation="xml.xsd"/>
  <!-- ************************************************************** -->
  <!-- * MEI datatypes                                              * -->
  <!-- ************************************************************** -->
  <!-- ************************************************************** -->
  <!-- * Invoke default attribute and model class declarations      * -->
  <!-- ************************************************************** -->
  <!--
    Include this only when some modules aren't included?  Better
    to calculate the missing attribute and model class declarations?
    Comment this out when generating tag library.
  -->
  <!-- <include href="defaultClassDecls.rng"/> -->
  <!-- ************************************************************** -->
  <!-- * Define a class for start elements                          * -->
  <!-- ************************************************************** -->
  <xs:group name="model.startLike">
    <xs:choice>
      <xs:choice>
        <xs:element ref="mei:mei"/>
        <xs:element ref="mei:music"/>
      </xs:choice>
      <xs:element ref="mei:meihead"/>
      <xs:element ref="mei:meicorpus"/>
    </xs:choice>
  </xs:group>
  <!-- ************************************************************** -->
  <!-- * Invoke the startLike class                                 * -->
  <!-- ************************************************************** -->
  <!-- ************************************************************** -->
  <!-- * Include modules                                            * -->
  <!-- ************************************************************** -->
  <!-- The shared and header modules must be included. -->
  <!--
    One or more of the CMN, mensural, or neumes modules must be
    included in order to encode musical content.
  -->
  <!-- The following modules are optional. -->
</xs:schema>
